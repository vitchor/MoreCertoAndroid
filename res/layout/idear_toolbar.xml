<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background= "#ffffff"
	android:orientation ="vertical"
	android:weightSum="1"
	>
	
	<LinearLayout
		android:layout_height="1dp"
		android:layout_width="fill_parent"
		android:background="#151515"
		/>
		
	<LinearLayout
		android:layout_height="1dp"
		android:layout_width="fill_parent"
		android:background="#434343"
		/>
		
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:background="@drawable/toolbar"
		android:layout_weight="1"
		>
		
		<RelativeLayout
			android:id="@+id/left_side"
			android:layout_width="130dp"
			android:layout_height="fill_parent"
			android:layout_alignParentLeft="true"
			android:layout_weight="1"
			>
			
			<ImageView
			android:id="@+id/image_title"
			android:src="@drawable/ic_morecerto"
			android:layout_height="wrap_content"
			android:layout_width="120dp"
			android:layout_alignParentLeft="true"
			android:scaleType="fitStart"
			/>
			
			<Button
				android:id="@+id/left_text_button"
				style="@style/toolbarButton"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_alignParentLeft="true"
				android:minWidth="50dp"
				android:background="#000000"
				android:visibility="gone"
				/>
				
			<ImageButton
				android:id="@+id/left_image_button"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_alignParentLeft="true"
				android:scaleType="centerInside"
				android:background="@drawable/toolbar_button"
				android:visibility="gone"
				/>
				
		</RelativeLayout>
			
		<TextView
			android:id="@+id/title"
			style ="@style/smallDarkShadow"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_centerInParent="true"
			android:textColor="@android:color/white"
			android:textSize="22dp"
			android:visibility="gone"
			/>
			
			
		<RelativeLayout
			android:id="@+id/right_side"
			android:layout_width="130dp"
			android:layout_height="fill_parent"
			android:layout_alignParentRight="true"
			android:layout_weight="1"
			>
			
			<ProgressBar
				android:id="@+id/spinner"
				style="@style/lightProgressBar"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:visibility="gone"
				/>
			<ToggleButton android:id="@+id/right_text_button"
				android:layout_width="130dp"
				android:layout_height="fill_parent"
				android:textOn="Voltar ao Mapa"
				android:textOff="Busca AvanÃ§ada"
				android:layout_alignParentRight="true"
				android:visibility="invisible"
				android:background="@layout/idear_selector_button"
				android:ellipsize="end"/>
				
			<ImageButton
				android:id="@+id/right_image_button"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_alignParentRight="true"
				android:scaleType="centerInside"
				android:visibility="invisible"
				android:background="@drawable/toolbar_button"
				/>
				
		</RelativeLayout>
		
	</RelativeLayout>
	
	<LinearLayout
		android:layout_height="1dp"
		android:layout_width="fill_parent"
		android:background="#292929"
		/>
		
	<LinearLayout
		android:layout_height="1dp"
		android:layout_width="fill_parent"
		android:background="#232323"
		/>
		
</LinearLayout>